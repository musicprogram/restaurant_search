
<div class="container bajar">
<div id="topRight" hidden>
        
    </div>
  

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"> <b>RESTAURANTS</b> </h3>
    </div>
    <div class="panel-body">

      <div class="row cercar">
        <div id="lista_rest">
            
            <%= search_form_for @q do |f| %>


              <%= f.label :name_cont , 'Buscar por nombre, especialidad, ciudad o zona' %>
              <%= f.search_field :name_or_specialty_name_or_dependences_city_name_or_dependences_zone_name_cont , class:'form-control' %>
              <br>
              <%= f.submit 'Buscar', class: 'btn btn-defult btn-lg btn-block' %>
            <% end %>
          <hr>






          <br>
          
            <div id="body_restaurante">
              <% @restaurants.each do |restaurant| %>
                <%= render '/restaurants/row', restaurant: restaurant%>
              <% end %>
            </div>
         

          <%= link_to 'Agregar restaurante', new_restaurant_path, remote: true %>

        </div>

        <div id="form_rest">

        </div>
      </div>


    </div>
  </div>
</div>


