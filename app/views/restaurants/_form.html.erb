<div class="jumbotron bajar">
  <style>
    #orangeBox {
   
    color: #fff;    
    font-size:57px;
    color:white;
    font-weight:bold;
    margin: -15px 0px -70px 0px;
    position: relative;
    bottom: 50px;
    left: 60px
    border-radius: 5px;
    text-shadow: -1px -2px 2px rgba(150, 150, 150, 1);
    
}

#orangeBox:hover{
  text-shadow: 1px 2px 16px rgba(150, 150, 150, 1);
}
  </style>
  <div id="orangeBox">
    <span id="x" onclick="toggler('topRight');">X</span>
</div>
 
 <div class="panel cercar">
    <%= form_for(restaurant, remote: true) do |f| %>
  <% if restaurant.errors.any? %>
    <div id="error_explanation">
      <h6><%= pluralize(restaurant.errors.count, "error") %> only can be one restaurant by zone:</h6>

      <ul>
      <% restaurant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class:'form-control' %>
  </div>
  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image, class:'form-control' %>
  </div>

  <div class="field">
    <%= f.label :specialty_id %>
        <%= f.collection_select :specialty_id, Specialty.all, :id, :name, {prompt: "check specialty"},  class:'form-control'%> 
  </div>
<br>
  <div class="actions">
    <%= f.submit 'Guardar', class:'btn btn-default ' %>
  </div>
<% end %>

 </div>

</div>