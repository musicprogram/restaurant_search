<p id="notice"><%= notice %></p>

<h1>Zones</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>telefono</th>
      <th>direccion</th>
      <th>horario</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @zones.each do |zone| %>
      <tr>
        <td><%= zone.name %></td>
        <td><%= zone.telefono %></td>
        <td><%= zone.direccion %></td>
        <td><%= zone.horario %></td>
        <td><%= zone.city.try(:name) %></td>
        <td><%= link_to 'Show', zone %></td>
        <td><%= link_to 'Edit', edit_zone_path(zone) %></td>
        <td><%= link_to 'Destroy', zone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

